<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjectAudioTap.Views.GuideView"
             BackgroundImage="Guide1Mat.png">


    <Grid
        RowSpacing="0"
        ColumnSpacing="0">

        
        <Grid.RowDefinitions>
            <RowDefinition Height="3*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="6*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>


                <Button
                    Margin="20"
            Grid.Column="0"
                    Grid.Row="2"
            Text="Next"
            WidthRequest="400"
            HorizontalOptions="End"
            VerticalOptions="End"
            
            CornerRadius="20"
            Clicked="NavigateButton_ToSpin"/>

                <Button
                    Margin="20"
            Grid.Column="2"
                    Grid.Row="2"
            Text="Skip"
            WidthRequest="400"
            HorizontalOptions="End"
            VerticalOptions="End"
            
            CornerRadius="20"
            Clicked="NavigateButton_ToSpin"/>
                
               

    </Grid>
</ContentPage>
             